<?xml version="1.0" encoding="utf-8"?>

<!-- //TODO: check that @keepScreenOn works well with ambient mode -->
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.beoni.openwaterswimtracking.TrackingActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:id="@+id/totalDistanceTxt"
            android:gravity="center"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="3500 meters"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/runningTimeTxt"
            android:gravity="center"
            android:layout_gravity="top|center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="00:55 duration"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/clockTxt"
            android:gravity="center"
            android:layout_gravity="top|center"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="12:52 h"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/stopBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:onClick="stop"
            android:text="Stop"/>
    </FrameLayout>

</android.support.wearable.view.BoxInsetLayout>
